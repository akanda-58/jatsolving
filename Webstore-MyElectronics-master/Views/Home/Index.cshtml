@model PaginatedList<Webstore_MyElectronics.Models.Product>
        @{
    var prevDisabled = !Model.HasPreviousPage ? "disabled" : "";
    var nextDisabled = !Model.HasNextPage ? "disabled" : "";
}
    <div style="background-color:rgb(243, 243, 243);  height:300px;" class="la col-md-3">
        <ul style="margin-left:-30px; font-size:20px;" id="cat-nav">
            <li><span class="glyphicon glyphicon-cog"></span><a asp-controller="Search" asp-action="Index"> All products</a></li>
            <li><ul>
                <li><span class="fa fa-laptop"></span><a asp-controller="Search" asp-action="Category" asp-route-category="1">&nbsp;&nbsp;&nbsp;Laptops</a></li>
                <li><span class="fa fa-desktop"></span><a asp-controller="Search" asp-action="Category" asp-route-category="4">&nbsp;&nbsp;&nbsp;Desktops</a></li>
                <li><span class="fa fa-tablet"></span><a asp-controller="Search" asp-action="Category" asp-route-category="5">&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;Tablets</a></li>
                <li><span class="fa fa-mobile"></span><a asp-controller="Search" asp-action="Category" asp-route-category="6">&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;Phones</a></li>
            </ul></li>
        </ul>
    </div>
    <div  class="i-img col-md-6">          
        <div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="3000">
    <ol style="margin-bottom:-0px; color:orange !important;" class="carousel-indicators">
 <li style="color:orange;" data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li  style="color:orange;" data-target="#myCarousel" data-slide-to="1"></li>
        <li  style="color:orange;" data-target="#myCarousel" data-slide-to="2"></li>
        <li  style="color:orange;"  data-target="#myCarousel" data-slide-to="3"></li>
    </ol>
    <div class="carousel-inner" role="listbox">
        <div class="item active">
            <img style="height:300px;"src="~/images/devices.png" alt="ASP.NET"/>
            <div class="carousel-caption" role="option">
                <p>
                </p>
            </div>
        </div>
        <div class="item">
            <img style="height:300px;"src="~/images/devices1.png" alt="ASP.NET"/>
            <div class="carousel-caption" role="option">
                <p>
                </p>
            </div>
        </div>
    </div>
    <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>
    </div>
    <div style="background-color:rgb(243, 243, 243); height:300px;" class="la1 col-md-3">
        <ul style="padding-top:30px; margin-left:-20px;" id="cat-nav">
            <li style="font-weight:bold;">✔ &nbsp;&nbsp; 1 Day Shipping !</li>
            <li style="font-weight:bold;">✔ &nbsp;&nbsp; Free Return!</li>
            <li style="font-weight:bold;">✔ &nbsp;&nbsp; No Shipping Costs!</li>
            <li style="font-weight:bold;">✔ &nbsp;&nbsp; Free Product Support!</li>
            <li style="font-weight:bold;">✔ &nbsp;&nbsp; 9/10 Costumer rating!</li>
        </ul>
    </div>

<div  class="sec-title col-md-12">
    <h2 style="font-weight:bold; margin-left:40%;">Products On Sale!</h2>
    <hr>
</div>
<div class="col-md-1">
    <a asp-action="Index"
   asp-route-sortOrder="@ViewBag.CurrentSort"
   asp-route-page="@(Model.PageIndex - 1)"
   asp-route-currentFilter="@ViewBag.CurrentFilter"
   class="btn fa fa-arrow-left @prevDisabled"
   style="padding-top:100px;color:orange; font-size:50px;">
</a>
</div>
<div style="margin-left:20px; margin-bottom:50px;" class="col-md-10">
@foreach (var product in Model)
        {
            @if(Model.Count() == 1)
            {
                <div class="col-md-10">
                <img style="height:140px;" class="prod-img" src="@product.ImgUrl"/>
            <h4 style="height:50px; width:220px;" class="prod-tit">@Html.ActionLink(product.ProductName,"Details","Search",new { id=product.ProductId})</h4>
            @if(product.Stock > 0){
            <h3>from €@product.OldPrice for €@product.ProductPrice</h3>
            <a class="" asp-controller="UserWishList" asp-action="AddToSavedProducts" asp-route-id="@User.Identity.Name" asp-route-pid="@product.ProductId" style="font-size:30px; color:orange; margin-right:30px">
                <span class="fa fa-star"></span>
            </a>
            <a class="btn btn-info btn-lg" asp-controller="ShoppingCart" asp-action="AddToShoppingCart" asp-route-ProductId="@product.ProductId" id="addcartbtn" style="width:130px; margin-bottom:15px;" >
                <span class="glyphicon glyphicon-shopping-cart"></span>
            </a>
            }
            @if(product.Stock <= 0)
            {
                <h4 class="prod-tite">Product is out of stock!</h4>
            }
            </div>
            }
            @if(Model.Count() == 2)
            {
                <div class="col-md-6">
                <img style="height:140px; " class="prod-img" src="@product.ImgUrl"/>
            <h4 style="height:50px; width:220px; " class="prod-tit">@Html.ActionLink(product.ProductName,"Details","Search",new { id=product.ProductId})</h4>
            @if(product.Stock > 0){
            <h3>from €@product.OldPrice for €@product.ProductPrice</h3>
            <a class="" asp-controller="UserWishList" asp-action="AddToSavedProducts" asp-route-id="@User.Identity.Name" asp-route-pid="@product.ProductId" style="font-size:30px; color:orange; margin-right:30px">
                <span class="fa fa-star"></span>
            </a>
            <a class="btn btn-info btn-lg" asp-controller="ShoppingCart" asp-action="AddToShoppingCart" asp-route-ProductId="@product.ProductId" id="addcartbtn" style="width:130px; margin-bottom:15px;" >
                <span class="glyphicon glyphicon-shopping-cart"></span>
            </a>
            }
            @if(product.Stock <= 0)
            {
                <h4  class="prod-tite">Product is out of stock!</h4>
            }
            </div>
            }
            @if(Model.Count() == 3)
            {
                <div class="col-md-4">
                 <img style="height:140px; width:220px;"  class="prod-img" src="@product.ImgUrl"/>
            <h4 style="height:50px;" class="prod-tit">@Html.ActionLink(product.ProductName,"Details","Search",new { id=product.ProductId})</h4>
            @if(product.Stock > 0){
            <h3>from €@product.OldPrice for €@product.ProductPrice</h3>
            <a class="" asp-controller="UserWishList" asp-action="AddToSavedProducts" asp-route-id="@User.Identity.Name" asp-route-pid="@product.ProductId" style="font-size:30px; color:orange; margin-right:30px">
                <span class="fa fa-star"></span>
            </a>
            <a class="btn btn-info btn-lg" asp-controller="ShoppingCart" asp-action="AddToShoppingCart" asp-route-ProductId="@product.ProductId" id="addcartbtn" style="width:130px; margin-bottom:15px;" >
                <span class="glyphicon glyphicon-shopping-cart"></span>
            </a>
            }
            @if(product.Stock <= 0)
            {
                <h4  style="margin-bottom:50px;" class="prod-tite">Product is out of stock!</h4>
            }
            </div>
            }
        }
</div>

<div style="margin-left:-20px;" class="col-md-1">
    <a asp-action="Index"
   asp-route-sortOrder="@ViewBag.CurrentSort"
   asp-route-page="@(Model.PageIndex + 1)"
   asp-route-currentFilter="@ViewBag.CurrentFilter"
   class="btn fa fa-arrow-right @nextDisabled"
   style="padding-top:100px;color:orange; font-size:50px;">
</a>
</div>


    <h2 style="font-weight:bold; margin-left:32%; margin-top:700px;">&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;Top 4 products in store!</h2>
    <hr>

<div class="col-md-12">
@foreach (var product in ViewBag.products)
        {
                <div style="margin-bottom:40px;" class="col-md-3">
                 <img style="height:140px; width:220px;"  class="prod-img" src="@product.ImgUrl"/>
            <h4 style="height:50px;" class="prod-tit">@product.ProductName</h4>
            @if(product.Stock > 0){
            <h6>Product has been bought @product.TimesBought times</h6>
            <h3>€@product.ProductPrice</h3>
            <a class="" asp-controller="UserWishList" asp-action="AddToSavedProducts" asp-route-id="@User.Identity.Name" asp-route-pid="@product.ProductId" style="font-size:30px; color:orange; margin-right:30px">
                <span class="fa fa-star"></span>
            </a>
            <a class="btn btn-info btn-lg" asp-controller="ShoppingCart" asp-action="AddToShoppingCart" asp-route-ProductId="@product.ProductId" id="addcartbtn" style="width:130px; margin-bottom:15px;" >
                <span class="glyphicon glyphicon-shopping-cart"></span>
            </a>
            }
            @if(product.Stock <= 0)
            {
                <h4  style="margin-bottom:50px;" class="prod-tite">Product is out of stock!</h4>
            }
            </div>
        }
</div>


<hr> 


